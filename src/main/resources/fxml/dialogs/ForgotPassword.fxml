<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="trainapp.controller.dialog.ForgotPasswordController"
            prefWidth="450.0" prefHeight="350.0">

    <stylesheets>
        <URL value="@../../css/ForgotPassword.css"/>
    </stylesheets>

    <header>
        <VBox alignment="CENTER" spacing="8" styleClass="dialog-header">
            <Label text="Reset Password" styleClass="dialog-title"/>
            <Label text="Enter your email to receive a verification code" styleClass="dialog-subtitle"/>
        </VBox>
    </header>

    <content>
        <VBox spacing="20" styleClass="dialog-content">
            <padding>
                <Insets top="20" right="30" bottom="10" left="30"/>
            </padding>

            <!-- Step 1: Email Input -->
            <VBox fx:id="emailStep" spacing="15">
                <VBox spacing="6" styleClass="field-group">
                    <Label text="Email Address" styleClass="field-label"/>
                    <TextField fx:id="emailField" promptText="Enter your registered email"
                               styleClass="dialog-input"/>
                    <Label fx:id="emailError" styleClass="error-message" visible="false" managed="false"/>
                </VBox>

                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="sendOtpButton" text="Send Verification Code"
                            styleClass="primary-button" onAction="#handleSendOtp"/>
                </HBox>
            </VBox>

            <!-- Step 2: New Password Input (Initially Hidden) -->
            <VBox fx:id="passwordStep" spacing="15" visible="false" managed="false">
                <Label text="Enter your new password" styleClass="step-title"/>

                <VBox spacing="6" styleClass="field-group">
                    <Label text="New Password" styleClass="field-label"/>
                    <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                                   styleClass="dialog-input"/>
                    <Label fx:id="passwordError" styleClass="error-message" visible="false" managed="false"/>
                </VBox>

                <VBox spacing="6" styleClass="field-group">
                    <Label text="Confirm New Password" styleClass="field-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                                   styleClass="dialog-input"/>
                    <Label fx:id="confirmPasswordError" styleClass="error-message" visible="false" managed="false"/>
                </VBox>

                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="resetPasswordButton" text="Reset Password"
                            styleClass="primary-button" onAction="#handleResetPassword"/>
                </HBox>
            </VBox>

            <!-- General Message -->
            <HBox alignment="CENTER">
                <Label fx:id="messageLabel" styleClass="message-label" visible="false" managed="false"/>
            </HBox>

            <!-- Loading Indicator -->
            <HBox fx:id="loadingBox" alignment="CENTER" spacing="10" visible="false" managed="false">
                <ProgressIndicator prefHeight="25" prefWidth="25"/>
                <Label fx:id="loadingLabel" text="Processing..." styleClass="loading-text"/>
            </HBox>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trainapp.controller.ui.MainMenuController">

    <stylesheets>
        <URL value="@../css/MainMenu.css" />
    </stylesheets>

    <!-- Enhanced Header with Gradient -->
    <top>
        <VBox styleClass="header-container">
            <HBox alignment="CENTER_LEFT" spacing="24" styleClass="navigation-bar">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitHeight="45" fitWidth="45" styleClass="logo-image">
                        <Image url="@../images/logo.png" />
                    </ImageView>
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <Label styleClass="app-title" text="Tailyatri" />
                        <Label styleClass="app-subtitle" text="Your Journey Partner" />
                    </VBox>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox spacing="8" styleClass="nav-buttons-container">
                    <Button styleClass="nav-button" text="ðŸš‚ Train Tickets" />
                    <Button styleClass="nav-button" text="ðŸ½ï¸ Food On Train" />
                    <Button styleClass="nav-button" text="â„¹ï¸ Train Info" />
                    <Button styleClass="nav-button" text="âš™ï¸ More" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="12">
                    <Button onAction="#handleMyAccount" styleClass="profile-button" text="ðŸ‘¤ My Account" />
                    <Button onAction="#handleViewBookings" styleClass="bookings-button" text="ðŸ“‹ My Bookings" />
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- Enhanced Main Content -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="main-scroll-pane" vbarPolicy="AS_NEEDED">
            <VBox spacing="25" styleClass="content-container">

                <!-- Compact Hero Section -->
                <VBox alignment="CENTER" spacing="8" styleClass="hero-section">
                    <Label styleClass="hero-title" text="Book Train Tickets in 2 Minutes!" />
                    <Label styleClass="hero-subtitle" text="Fast â€¢ Easy â€¢ Secure" />
                </VBox>

                <!-- WIDER and SHORTER Booking Card -->
                <VBox alignment="CENTER" styleClass="booking-section">
                    <VBox alignment="CENTER" spacing="15" styleClass="booking-card">
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="card-header">
                            <ImageView fitHeight="24" fitWidth="24">
                                <Image url="@../images/ticket-icon.png" />
                            </ImageView>
                            <Label styleClass="card-title" text="Book Train Tickets" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label styleClass="card-subtitle" text="Search and book confirmed tickets instantly" />
                        </HBox>

                        <HBox alignment="CENTER" spacing="20" styleClass="booking-form-container">
                            <!-- From Station ComboBox -->
                            <VBox maxWidth="180" minWidth="180" prefWidth="180" styleClass="form-group">
                                <Label styleClass="form-label" text="ðŸš‰ From" />
                                <ComboBox fx:id="trainFromCombo" maxWidth="180" minWidth="180" prefWidth="180"
                                          promptText="Select departure station" styleClass="modern-combo" />
                            </VBox>

                            <!-- Swap Button -->
                            <VBox alignment="CENTER" styleClass="swap-container">
                                <Label styleClass="form-label" text=" " />
                                <Button onAction="#handleSwapStations" styleClass="swap-button" text="â‡„" />
                            </VBox>

                            <!-- To Station ComboBox -->
                            <VBox maxWidth="180" minWidth="180" prefWidth="180" styleClass="form-group">
                                <Label styleClass="form-label" text="ðŸ To" />
                                <ComboBox fx:id="trainToCombo" maxWidth="180" minWidth="180" prefWidth="180"
                                          promptText="Select destination station" styleClass="modern-combo" />
                            </VBox>

                            <!-- Date -->
                            <VBox maxWidth="180" minWidth="180" prefWidth="180" spacing="8" styleClass="form-group">
                                <Label styleClass="form-label" text="ðŸ“… Date" />
                                <DatePicker fx:id="trainDatePicker" maxWidth="180" minWidth="180" prefWidth="180" styleClass="modern-datepicker" />
                            </VBox>

                            <!-- Search Button -->
                            <VBox alignment="BOTTOM_LEFT" maxWidth="140" minWidth="140" prefWidth="140" styleClass="search-container">
                                <Label styleClass="form-label" text=" " />
                                <Button fx:id="searchTrainsButton" onAction="#handleSearchClick" styleClass="search-button" text="ðŸ” Search Trains" />
                            </VBox>
                        </HBox>

                        <!-- Messages Row -->
                        <HBox alignment="CENTER" spacing="15">
                            <Label fx:id="errorMessageLabel" styleClass="error-message" visible="false" />
                            <Label fx:id="bookingStatus" styleClass="status-message" visible="false" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Compact Stats Row -->
                <HBox alignment="CENTER" spacing="25" styleClass="stats-container">
                    <VBox alignment="CENTER" spacing="3" styleClass="stat-item">
                        <Label styleClass="stat-number" text="10M+" />
                        <Label styleClass="stat-label" text="Happy Travelers" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="3" styleClass="stat-item">
                        <Label styleClass="stat-number" text="99.9%" />
                        <Label styleClass="stat-label" text="Success Rate" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="3" styleClass="stat-item">
                        <Label styleClass="stat-number" text="24/7" />
                        <Label styleClass="stat-label" text="Support" />
                    </VBox>
                </HBox>

                <!-- Enhanced Quick Services - More Visible -->
                <VBox spacing="15" styleClass="services-section">
                    <VBox alignment="CENTER" spacing="5">
                        <Label styleClass="section-title" text="Quick Services" />
                        <Label styleClass="section-subtitle" text="Access all train services in one place" />
                    </VBox>

                    <GridPane styleClass="services-grid">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="ALWAYS" />
                            <RowConstraints vgrow="ALWAYS" />
                        </rowConstraints>

                        <!-- Enhanced Service Cards -->
                        <VBox spacing="12" styleClass="service-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fitHeight="30" fitWidth="30" styleClass="service-icon">
                                    <Image url="@../images/train_icon.png" />
                                </ImageView>
                                <VBox spacing="2">
                                    <Label styleClass="service-title" text="Train Status" />
                                    <Label styleClass="service-desc" text="Live tracking and updates" />
                                </VBox>
                            </HBox>
                            <TextField fx:id="trainStatusField" promptText="Enter train name or number" styleClass="service-input" />
                            <Button fx:id="checkStatusButton" onAction="#handleTrainStatus" styleClass="service-button" text="Track Now" />
                        </VBox>

                        <VBox spacing="12" styleClass="service-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fitHeight="30" fitWidth="30" styleClass="service-icon">
                                    <Image url="@../images/pnr_icon.png" />
                                </ImageView>
                                <VBox spacing="2">
                                    <Label styleClass="service-title" text="PNR Status" />
                                    <Label styleClass="service-desc" text="Check booking status" />
                                </VBox>
                            </HBox>
                            <TextField fx:id="pnrStatusField" promptText="Enter 10-digit PNR" styleClass="service-input" />
                            <Button fx:id="checkPnrButton" onAction="#handlePNRStatus" styleClass="service-button" text="Check Status" />
                        </VBox>

                        <VBox spacing="12" styleClass="service-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fitHeight="30" fitWidth="30" styleClass="service-icon">
                                    <Image url="@../images/time_table_icon.png" />
                                </ImageView>
                                <VBox spacing="2">
                                    <Label styleClass="service-title" text="Train Schedule" />
                                    <Label styleClass="service-desc" text="View complete timetable" />
                                </VBox>
                            </HBox>
                            <TextField fx:id="timeTableField" promptText="Enter train name or number" styleClass="service-input" />
                            <Button fx:id="viewScheduleButton" onAction="#handleTrainSchedule" styleClass="service-button" text="View Schedule" />
                        </VBox>

                        <VBox spacing="12" styleClass="service-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fitHeight="30" fitWidth="30" styleClass="service-icon">
                                    <Image url="@../images/trains_between_stations_icon.png" />
                                </ImageView>
                                <VBox spacing="2">
                                    <Label styleClass="service-title" text="Find Trains" />
                                    <Label styleClass="service-desc" text="Between any two stations" />
                                </VBox>
                            </HBox>
                            <VBox spacing="8">
                                <ComboBox fx:id="fromStationCombo" promptText="From station" styleClass="service-combo" />
                                <ComboBox fx:id="toStationCombo" promptText="To station" styleClass="service-combo" />
                                <DatePicker fx:id="trainsDatePicker" promptText="Journey date" styleClass="service-datepicker" />
                            </VBox>
                            <Button fx:id="checkTrainsButton" onAction="#handleFindTrains" styleClass="service-button" text="Find Trains" />
                        </VBox>
                    </GridPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Enhanced Footer -->
    <bottom>
        <VBox styleClass="footer-container">
            <HBox alignment="CENTER" spacing="40" styleClass="footer-content">
                <VBox alignment="CENTER" spacing="4">
                    <Label styleClass="footer-brand" text="Â© 2025 Tailyatri" />
                    <Label styleClass="footer-tagline" text="Your trusted travel partner" />
                </VBox>
                <HBox spacing="20">
                    <Hyperlink styleClass="footer-link" text="Help and Support" />
                    <Hyperlink styleClass="footer-link" text="Privacy Policy" />
                    <Hyperlink styleClass="footer-link" text="Terms of Service" />
                    <Hyperlink styleClass="footer-link" text="Contact Us" />
                </HBox>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
